<h1 class="text-center mt-4 text-white fw-bold" >Log in</h1>

<div class="container shadow w-50 p-3 rounded-3">
  <%= form_with(scope: :session, url: login_path) do |form| %>
    <form>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control"%>
        <div id="help" class="form-text">Enter your email</div>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control"%>
        <div id="help" class="form-text">Enter your password</div>
      </div>
      <div class="actions">
        <%= form.submit "Log in", class: "btn btn-primary" %>
      </div>
    </form> 
  <% end %>
  <%= link_to 'Back', articles_path %>
</div>
