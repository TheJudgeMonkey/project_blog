<div class="container shadow p-3 rounded-3">
  <%= form_with(model: article) do |form| %>
    <%= render 'shared/errors' %> 
    <form>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control"%>
        <div id="help" class="form-text">Length must be more than 6 characters and less than 100</div>
      </div>
      <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-control", rows: "4"%>
        <div id="help" class="form-text">Length must be more than 10 characters and less than 500</div>
      </div>
      <div class="actions">
        <%= form.submit class: "btn btn-primary"%>
      </div>
    </form> 
  <% end %>
  <%= link_to 'Back', articles_path %>
</div>
