<h1 class="text-center mt-4 text-white fw-bold">Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-primary btn-sm" %>
  </div>
<% end %>

<h2 class="text-center mt-4 text-white fw-bold" >Articles</h2>

<div class="apple_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="apple_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>